extends layout

block content
  h1.w3-container.w3-teal Classes de Primeiro Nível

  table.w3-table.w3-bordered
   tr
    th.w3-center Título 
    th.w3-center Código 
    tr 
     td= dados.titulo
     td= dados.codigo

  h1.w3-container.w3-teal Filhos:
  if dados.filhos.length > 0
   table.w3-table.w3-bordered 
    tr 
     th.w3-center Título 
     th.w3-center Código 
     each f in dados.filhos
      tr 
       td= f.titulo 
       td
        a(href='/classes/' + f.codigo)= f.codigo
  

  h1.w3-container.w3-teal Termos de Índice:
  if dados.nivel == 3
   if dados.termosInd.length > 0
   table.w3-table.w3-bordered 
    tr 
     th.w3-center Título 
     th.w3-center Código 
     each f in dados.termosInd
      tr 
       td= f.idTI
       td= f.termo


  p.w3-container
   a(href='/') Voltar à Página principal